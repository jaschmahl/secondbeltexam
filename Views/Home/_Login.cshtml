@model LoginUser

<form action="/users/login" method="post" class="px-4 py-3 border border-dark bg-dark text-white">
    <div class="form-group d-flex justify-content-between my-2">
        <label for="logusername" class="w-50 text-left py-1">Username: </label>
        <input asp-for="logusername" class="form-control w-75">
    </div>
    <span asp-validation-for="logusername" class="text-danger"></span>

    <div class="form-group d-flex justify-content-between my-2">
        <label for="logpassword" class="w-50 text-left py-1">Password: </label>
        <input asp-for="logpassword" class="form-control w-75">
    </div>
    <span asp-validation-for="logpassword" class="text-danger"></span>

    <div class="form-group d-flex mt-4 justify-content-center">
        <input type="submit" value="Login" class="btn btn-primary btn-lg">
    </div>
</form>