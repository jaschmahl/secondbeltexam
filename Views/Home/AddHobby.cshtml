@{
    ViewData["Title"] = "Add a Hobby";
}

@model Hobby

<h1 class="text-center">Create a Hobby</h1>
<div class="w-100 ml-2">
    <form action="/hobbies/create" method="post" class="px-4 py-3 bg-dark text-white">
        <div class="form-group d-flex justify-content-between align-items-center">
            <label for="name">Name:</label>
            <input asp-for="name" class="form-control ml-3 w-75">
        </div>
        <span asp-validation-for="name" class="text-danger"></span>
        
        <div class="form-group d-flex justify-content-between align-items-center">
            <label for="description">Description:</label>
            <input asp-for="description" class="form-control ml-3 w-75">
        </div>
        <span asp-validation-for="description" class="text-danger"></span>
        
        <div class="form-group d-flex mt-4 justify-content-center">
            <input type="submit" value="Create" class="btn btn-primary btn-lg">
        </div>
    </form>
</div>